{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "baseUrl": "./",
        "moduleResolution": "node",
        "jsx": "preserve",
        "paths": {
            "@/*": [ "./src/*" ],
            "@/components/common" : [ "./src/components/common*" ],
            "@/components" : [ "./src/components/*" ],
            "@/views" : [ "./src/views/*" ],
            "@/assets" : [ "./src/assets/*" ],
            "@/lib" : [ "./src/lib/*" ],
            "@/utils" : [ "./src/utils/*" ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "exclude": ["node_modules", "dist"]
}
